							</tr>


							<tr class="tabletitle">
								<td></td>
								<td class="Rate"><h2></h2></td>
								<td class="payment"><h2></h2></td>
							</tr>

							<tr class="tabletitle">
								<td></td>
								<td><h2><h2></td>
								<td class="payment "><div class="text-end">$<%= @rental.total_price %></div></td>


						</table>
					</div><!--End Table-->

