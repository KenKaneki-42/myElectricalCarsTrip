							</tr>

							<tr class="service">
								<td class="tableitem"><p class="itemtext">Ending date</p></td>
								<td class="tableitem"><p class="itemtext"></p></td>
								<td class="tableitem"><p class="itemtext"><%= @rental.ending_date %></p></td>
							</tr>

              <tr class="service">
								<td class="tableitem"><p class="itemtext">Description</p></td>
								<td class="tableitem"><p class="itemtext"></p></td>
								<td class="tableitem"><p class="itemtext"><%= @rental.car.description %></p></td>
							</tr>

