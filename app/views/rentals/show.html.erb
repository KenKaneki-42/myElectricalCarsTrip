								<td class="tableitem"><p class="itemtext"><%= @rental.car.model %></p></td>
							</tr>

							<tr class="service">
								<td class="tableitem"><p class="itemtext">Autonomy</p></td>
								<td class="tableitem"><p class="itemtext"></p></td>
