<div class="rounded-5 shadow bg-light border container p-3 mt-3">
<div class=" d-flex justify-content-center">
  <h2>Log in</h2>
</div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}) do |f| %>
    <div class="form-inputs">

      <div class="d-flex p-2 me-4">
        <div class="me-2">
          <i class="fa-solid fa-user"></i>
        </div>
        <div class="w-100">
          <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        </div>
      </div>
      <div class="d-flex p-2 me-4">
        <div class="me-2">
          <i class="fa-solid fa-key"></i>
        </div>
        <div class="w-100">
          <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        </div>
      </div>
      <div class="d-flex p-2 me-4">
        <div class="me-2">
          <i class="fa-solid fa-bookmark"></i>
        </div>
        <div class="w-100">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
    </div>
    <div class="d-flex p-2 me-4 justify-content-center">
      <div class="form-actions btn btn-primary rounded-4 mb-3">
        <%= f.button :submit, "Log in" %>
      </div>
    </div>

  <% end %>
    <%= render "devise/shared/links" %>
</div>
