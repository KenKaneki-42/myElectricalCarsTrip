<div class="container py-4 w-50">
  <h2 class="d-flex justify-content-center">Create a new car for the owner</h2>
  <%#  simple_form_for([@owner, @car]) do |f| %>
  <%= simple_form_for @car, html: { novalidate: false} do |f| %>
    <%= f.input :brand, collection: Car::BRAND_CATEGORY %>
    <%= f.input :model %>
    <%= f.input :autonomy, label: 'Autonomy (km)' %>
    <%= f.input :photo %>
    <%= f.input :description, minlength: 10 %>
    <%= f.input :daily_price %>
    <%= f.submit "Add new car", class: "btn btn-primary"%>
    <%# <%= user: @owner %>
  <% end %>
</div>
