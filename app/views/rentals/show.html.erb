							</tr>

							<tr class="service">
								<td class="tableitem"><p class="itemtext">Status</p></td>
								<td  class="tableitem"><p class="itemtext"></p></td>
								<td class="tableitem"><p class="itemtext"><%= @rental.status %></p></td>
							</tr>

              	<tr class="service">
								<td class="tableitem"><p class="itemtext">Beginning date</p></td>
